<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Products</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
        <%= link_to category do %>
          <tr>
              <td><%= category.name %></td>
              <td><%= category.products.count %></td>
              <td><%= link_to 'Show', category, class: 'btn btn-primary' %></td>
              <td><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-warning' %></td>
              <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class: 'btn btn-success' %>
